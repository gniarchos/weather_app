{
  "expo": {
    "name": "Weather Now",
    "slug": "WeatherApp",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/weatherApp_logo_1.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash_weather.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.niarchos.weathernow",
      "buildNumber": "1.1.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show weather information.",
        "NSLocationAlwaysUsageDescription": "We need your location to provide accurate weather updates."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "expo-location": {
      "locationAlwaysAndWhenInUsePermission": "Allow Weather Now to use your location."
    },
    "extra": {
      "eas": {
        "projectId": "3f6834a3-45a7-473f-a8da-a6d3ac634b59"
      }
    }
  }
}
